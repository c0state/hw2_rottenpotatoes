-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    = form_tag movies_path, :method => :get do
      Include: 
      - @all_ratings.each do |rating, value|
        = rating
        = check_box_tag "ratings[#{rating}]", value = 0, checked = (@ratings[rating] ? true : false)
      = hidden_field_tag('sort_by', @sort_by) if @sort_by
      = submit_tag 'Refresh', :id => 'ratings_submit'

    %tr
      %th#title_header{:class => ('hilite' if @sort_by == 'title')}= link_to 'Movie Title', { :controller => :movies, :action => :index, :sort_by => :title, :ratings => @ratings }
      %th Rating
      %th#release_date_header{:class => ('hilite' if @sort_by == 'release_date')}= link_to 'Release Date', { :controller => :movies, :action => :index, :sort_by => :release_date, :ratings => @ratings }
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
